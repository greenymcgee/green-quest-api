{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "file:/game.json#",
  "description": "A game",
  "properties": {
    "createdAt": {
      "description": "The datetime of the record's creation",
      "type": "string"
    },
    "errors": {
      "description": "Any errors that might be present after fulfilling a game request",
      "type": "array"
    },
    "genres": {
      "items": {
        "properties": {
          "id": { "type": "integer" },
          "igdbId": { "type": "integer" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        },
        "required": ["id", "igdbId", "name", "slug", "createdAt", "updatedAt"]
      },
      "type": "array"
    },
    "platforms": {
      "items": { "$ref": "file:/platform_without_resources.json#" },
      "type": "array"
    },
    "id": {
      "description": "The unique identifier for a game.",
      "type": "integer"
    },
    "igdbId": {
      "description": "The id for the game in the IGDB database.",
      "type": "integer"
    },
    "name": {
      "description": "The name of the game",
      "type": "string"
    },
    "review": {
      "description": "Richtext: the review of the game.",
      "type": "string"
    },
    "rating": {
      "description": "Float: the rating for the game from 1 - 5.",
      "type": "number"
    },
    "updatedAt": {
      "description": "The datetime of the record's last update",
      "type": "string"
    }
  },
  "required": [
    "genres",
    "id",
    "igdbId",
    "name",
    "platforms",
    "review",
    "rating"
  ],
  "title": "Game",
  "type": "object"
}
