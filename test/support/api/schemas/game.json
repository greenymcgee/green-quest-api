{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "file:/game.json#",
  "description": "A game",
  "properties": {
    "ageRatings": {
      "items": { "$ref": "file:/age_rating.json#" },
      "type": "array"
    },
    "artWorks": {
      "items": { "$ref": "file:/artwork.json#" },
      "type": "array"
    },
    "cover": { "$ref": "file:/cover.json#" },
    "createdAt": {
      "description": "The datetime of the record's creation",
      "type": "string"
    },
    "developers": {
      "items": { "$ref": "file:/company.json#" },
      "type": "array"
    },
    "errors": {
      "description": "Any errors that might be present after fulfilling a game request",
      "type": "array"
    },
    "gameEngines": {
      "items": { "$ref": "file:/game_engine.json#" },
      "type": "array"
    },
    "gameModes": {
      "items": { "$ref": "file:/game_mode.json#" },
      "type": "array"
    },
    "genres": {
      "items": {
        "properties": {
          "id": { "type": "integer" },
          "igdbId": { "type": "integer" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        },
        "required": ["id", "igdbId", "name", "slug", "createdAt", "updatedAt"]
      },
      "type": "array"
    },
    "platforms": {
      "items": { "$ref": "file:/platform_without_resources.json#" },
      "type": "array"
    },
    "porters": {
      "items": { "$ref": "file:/company.json#" },
      "type": "array"
    },
    "publishers": {
      "items": { "$ref": "file:/company.json#" },
      "type": "array"
    },
    "id": {
      "description": "The unique identifier for a game.",
      "type": "integer"
    },
    "igdbId": {
      "description": "The id for the game in the IGDB database.",
      "type": "integer"
    },
    "name": {
      "description": "The name of the game",
      "type": "string"
    },
    "review": {
      "description": "Richtext: the review of the game.",
      "type": "string"
    },
    "rating": {
      "description": "Float: the rating for the game from 1 - 5.",
      "type": "number"
    },
    "releaseDates": {
      "items": { "$ref": "file:/release_date.json#" },
      "type": "array"
    },
    "screenshots": {
      "items": { "$ref": "file:/screenshot.json#" },
      "type": "array"
    },
    "supporters": {
      "items": { "$ref": "file:/company.json#" },
      "type": "array"
    },
    "websites": {
      "items": { "$ref": "file:/website.json#" },
      "type": "array"
    },
    "updatedAt": {
      "description": "The datetime of the record's last update",
      "type": "string"
    }
  },
  "required": [
    "ageRatings",
    "artworks",
    "cover",
    "developers",
    "gameEngines",
    "gameModes",
    "genres",
    "id",
    "igdbId",
    "name",
    "platforms",
    "porters",
    "publishers",
    "rating",
    "releaseDates",
    "review",
    "screenshots",
    "supporters",
    "websites"
  ],
  "title": "Game",
  "type": "object"
}
