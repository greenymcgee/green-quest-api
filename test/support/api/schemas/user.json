{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "file:/user.json#",
  "description": "A user",
  "properties": {
    "admin": {
      "description": "A flag for whether or not the user is an admin",
      "type": "boolean"
    },
    "email": {
      "description": "The email used to register the user.",
      "type": "string"
    },
    "firstName": {
      "description": "The user's first name",
      "type": "string"
    },
    "id": {
      "description": "The unique identifier for a user",
      "type": "integer"
    },
    "lastName": {
      "description": "The user's last name",
      "type": "string"
    },
    "username": {
      "description": "The user's chosen username",
      "type": "string"
    }
  },
  "required": ["admin", "email", "firstName", "id", "lastName", "username"],
  "title": "User",
  "type": "object"
}
